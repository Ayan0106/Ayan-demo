#include <iostream>
#include <vector>
#include <string>

using namespace std;

int main() {

    vector<string> todoList;
    string task;

    cout << "Welcome to the To-Do List App!"<<endl;

    while (true) {
        cout << "Enter a task (or type 'quit' to exit): ";
        cin>>(task);

        if (task == "quit") {
            cout << "\nGoodbye!\n";
            break;
        }

        todoList.push_back(task);
        cout << "Task added!\n";
    }

    cout << "\nYour To-Do List:\n";
    for (int i = 0; i < todoList.size(); i++) {
        cout << i+1 << ". " << todoList[i] << endl;
    }

    return 0;
}
