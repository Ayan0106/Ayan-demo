#include<iostream>
using namespace std;
int main(){
    int a,b;
    char ch;
    cout<<"Enter two numbers:\n";
    cin>>a>>b;
    
    cout<<"Enter your choice:";
    cin>>ch;
    
    switch(ch){
        case'+': cout<<a<<"+"<<b<<"="<<a+b;
        break;
        
        case'-': cout<<a<<"-"<<b<<"="<<a-b;
        break;
        
        case'*': cout<<a<<"*"<<b<<"="<<a*b;
        break;
        
        case'/': 
         if (b != 0) {
             cout<<a<<"/"<<b<<"="<<a/b;
         }
         else{
             cout<<"Error, because division by zero.";
         }
        break;
        
        default: cout<<"Invalid operator.";
        
    }
    
    
    return 0;
}
